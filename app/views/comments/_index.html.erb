<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      
      <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <p><%= comment.user.name %></p>
      <p><%= comment.content %></p>
      <p><%= link_to "コメント編集", edit_comment_path(comment), remote: true %></p>
      <p><%= link_to "コメント削除", comment_path(comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %></p>
    <% end %>
  <% end %>
</ul>