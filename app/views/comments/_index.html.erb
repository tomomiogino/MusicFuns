<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>

      <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <p><%= comment.user.name %></p>
      <p><%= comment.content %></p>
      <% if comment.user == current_user %>
        <%= link_to t('link.edit'), edit_comment_path(comment), remote: true %> |
        <%= link_to t('link.destroy'), comment_path(comment.id), method: :delete, remote: true, data: { confirm: t('message.Are you sure?')} %>
      <% end %>
    <% end %>
  <% end %>
</ul>