<div class="page_item">
  <h4><%= t('view.channel.new') %></h4><br>
  <%= Artist.human_attribute_name(:name) %>
  <h3><%= @artist.name %></h3>
  <div>
    <% if @artist.image.present? %>
      <%= image_tag(@artist.image.url) %>
    <% else %>
      <%= image_tag("default.png") %>
    <% end %>
  </div><br>

  <%= form_with(model: [@artist, @channel], local: true) do |f| %>
    <% if @channel.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          <h2><%= t('errors.template.header', count: @channel.errors.count) %></h2>
          <ul>
            <% @channel.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: t('view.channel.example'), class:"form-control" %>
    </div>
    <div class="text-center my-4">
      <%= f.submit "チャンネルを作成", class:"btn btn-primary" %>
    </div>
  <% end %>
  <div>
    <%= link_to t('link.artist.to page'), artist_path(@artist), class: "btn btn-outline-warning" %>
  </div>
</div>